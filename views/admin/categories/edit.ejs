<%- include ('../../partials/header.ejs');%> <%- include
('../../partials/navbar.ejs');%>
<div class="container">
  <hr />

  <div class="card">
    <div class="card-header">
      <h2>Edição de categoria</h2>
    </div>

    <div class="card-body">
      <form method="POST" action="/categories/update">
        <input
          class="form-control"
          name="title"
          placeholder="Defina o título da categoria"
          type="text"
          value="<%= category.title %>"
        />
        <input type="hidden" name="id" value="<%= category.id%>" />
        <br />
        <button class="btn btn-success" type="submit">Atualizar</button>
      </form>
    </div>
  </div>
</div>

